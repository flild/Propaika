@page
@model Propaika_main_app.Pages.Cases.IndexModel
@{
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-white mb-3">
            Выполненные <span class="neon-text">работы</span>
        </h1>
        <p class="text-white-50 lead">Примеры восстановления сложной электроники</p>
    </div>

    <!-- Класс cases-teaser нужен для корректной работы стилей слайдера из site.css -->
    <div class="row g-4 cases-teaser">
        @foreach (var item in Model.Cases)
        {
            <div class="col-md-6 col-lg-4">
                <!-- Ссылка оборачивает только тело карточки, чтобы слайдер был кликабельным -->
                <div class="card neon-card h-100 text-white cases-teaser-card border-0">

                    <!-- СЛАЙДЕР ДО / ПОСЛЕ В КАРТОЧКЕ -->
                    <div class="ba-slider position-relative overflow-hidden">
                        <!-- Фото ПОСЛЕ (фон) -->
                        <div class="ba-img ba-img-after" style="background-image: url('@item.AfterImage');">
                            <span class="badge bg-black bg-opacity-75 position-absolute top-0 end-0 m-2" style="font-size: 0.7rem;">После</span>
                        </div>

                        <!-- Фото ДО (верхний слой) -->
                        <div class="ba-img ba-img-before" style="background-image: url('@item.BeforeImage');">
                            <span class="badge bg-black bg-opacity-75 position-absolute top-0 start-0 m-2" style="font-size: 0.7rem;">До</span>
                        </div>

                        <!-- Разделитель -->
                        <div class="ba-divider">
                            <!-- В мини-версии ручку можно сделать поменьше или скрыть, если мешает -->
                            <div class="ba-handle" style="width: 28px; height: 28px; font-size: 12px;">
                                <i class="bi bi-arrows"></i>
                            </div>
                        </div>

                        <!-- Ползунок -->
                        <input type="range" min="0" max="100" value="50" class="ba-range"
                               oninput="updateSlider(this)" aria-label="Сравнение">
                    </div>

                    <!-- ТЕЛО КАРТОЧКИ (ссылка на детали) -->
                    <a asp-page="./Details" asp-route-slug="@item.Slug" class="text-decoration-none text-white d-flex flex-column flex-grow-1">
                        <div class="card-body d-flex flex-column pt-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold mb-0 text-truncate pe-2">@item.Title</h5>
                                <span class="badge bg-dark border border-secondary text-info" style="font-size: 0.7rem;">
                                    @item.DeviceModel
                                </span>
                            </div>

                            <p class="card-text text-white-50 small mb-3 flex-grow-1" style="min-height: 4.5em;">
                                @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 90)
                                {
                                    @item.Description.Substring(0, 90)
                            
                                    <text>...</text>
                                }
                                else
                                {
                                    @item.Description
                                }
                            </p>

                            <div class="d-flex justify-content-between align-items-center mt-auto border-top border-white border-opacity-10 pt-3">
                                <div class="neon-price fw-bold">@item.Cost.ToString("N0") ₽</div>
                                <span class="small text-info text-uppercase fw-bold" style="font-size: 0.75rem;">
                                    Подробнее <i class="bi bi-chevron-right"></i>
                                </span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function updateSlider(rangeInput) {
            const slider = rangeInput.closest('.ba-slider');
            const before = slider.querySelector('.ba-img-before');
            const divider = slider.querySelector('.ba-divider');
            const handle = slider.querySelector('.ba-handle');

            const val = rangeInput.value; // 0–100

            before.style.clipPath = `inset(0 ${100 - val}% 0 0)`;

            // Двигаем линию и ручку
            divider.style.left = val + '%';
            handle.style.left = val + '%';
        }

        // Инициализация
        document.querySelectorAll('.ba-slider .ba-range').forEach(r => updateSlider(r));
    </script>
}