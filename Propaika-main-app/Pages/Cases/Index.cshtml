@page
@model Propaika_main_app.Pages.Cases.IndexModel
@{
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold neon-text">Кейсы ремонтов</h1>
    <p class="text-muted lead">Реальные примеры восстановления безнадежной техники</p>
</div>

@if (!Model.Cases.Any())
{
    <div class="text-center py-5">
        <p class="text-muted">Портфолио наполняется...</p>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model.Cases)
        {
            <div class="col">
                <div class="card neon-card h-100 border-0 overflow-hidden">

                    <!-- Слайдер До/После -->
                    <div class="ba-slider" style="height: 250px;">
                        <!-- Фото ПОСЛЕ (Фон) -->
                        <div class="ba-after" style="background-image: url('@item.AfterImage');"></div>

                        <!-- Фото ДО (Сверху, обрезается) -->
                        <div class="ba-before" style="background-image: url('@item.BeforeImage');"></div>

                        <!-- Ползунок -->
                        <input type="range" min="0" max="100" value="50" class="ba-range"
                               oninput="updateSlider(this)"
                               aria-label="Сравнение до и после">

                        <!-- Лейблы -->
                        <span class="badge bg-danger position-absolute top-0 start-0 m-2 opacity-75">ДО</span>
                        <span class="badge bg-success position-absolute top-0 end-0 m-2 opacity-75">ПОСЛЕ</span>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-white">@item.Title</h5>
                        <p class="card-text text-muted small flex-grow-1">@item.Description</p>

                        <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top border-secondary">
                            <span class="neon-text fw-bold fs-5">@item.Cost.ToString("N0") ₽</span>
                            <small class="text-muted">@item.DateCompleted.ToString("dd.MM.yyyy")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        // JS функция для обновления ширины "Before" картинки при движении ползунка
        function updateSlider(rangeInput) {
            const sliderContainer = rangeInput.closest('.ba-slider');
            const beforeImage = sliderContainer.querySelector('.ba-before');
            const val = rangeInput.value;
            beforeImage.style.width = val + "%";
        }
    </script>
}