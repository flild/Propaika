@page "{slug}"
@model Propaika_main_app.Pages.Cases.DetailsModel
@section Head {
    <link rel="canonical" href="@Url.Page("/Cases/Details", null,
                              new { slug = Model.Case.Slug }, Request.Scheme)" />
}

<article itemscope itemtype="https://schema.org/Article">
    <h1 itemprop="headline">@Model.Case.Title</h1>

    <div class="case-meta text-muted mb-3">
        <span> @Model.Case.DeviceModel</span> |
        <span> @Model.Case.ServiceType</span> |
        <time datetime="@Model.Case.DateCompleted.ToString("yyyy-MM-dd")">
            @Model.Case.DateCompleted.ToString("d MMMM yyyy")
        </time>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h5>До ремонта</h5>
            <img src="@Model.Case.BeforeImage" class="img-fluid" loading="lazy"
                 alt="До ремонта - @Model.Case.Title">
        </div>
        <div class="col-md-6">
            <h5>После ремонта</h5>
            <img src="@Model.Case.AfterImage" class="img-fluid" loading="lazy"
                 alt="После ремонта - @Model.Case.Title">
        </div>
    </div>

    <div class="case-description mt-4" itemprop="articleBody">
        @Html.Raw(Model.Case.Description)
    </div>

    <p class="lead mt-4">Стоимость работы: <strong>@Model.Case.Cost ₽</strong></p>
</article>