@page
@model Propaika_main_app.Pages.Admin.Devices.IndexModel
@using Propaika_main_app.Extra
@using Propaika_main_app.Models
@{
    ViewData["Title"] = "Модели устройств";
    var groupedDevices = Model.Devices.GroupBy(d => d.DeviceType).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-white">Модели устройств</h1>
        <p class="text-white-50 mb-0 small">Управление каталогом поддерживаемых устройств</p>
    </div>
    <button type="button" class="btn btn-primary btn-neon" onclick="openModal()">
        <i class="bi bi-plus-lg me-2"></i>Добавить модель
    </button>
</div>

@if (!groupedDevices.Any())
{
    <div class="text-center py-5 text-muted">
        <i class="bi bi-phone fs-1 d-block mb-3 opacity-25"></i>
        <p>Список устройств пуст. Добавьте первую модель.</p>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var group in groupedDevices)
        {
            <div class="col-12">
                <!-- Заголовок группы -->
                <h5 class="text-white border-bottom border-secondary pb-2 mb-3 d-flex align-items-center">
                    @GetDeviceIcon(group.Key)
                    <span class="ms-2">@group.Key.ToString()</span>
                    <span class="badge bg-dark border border-secondary text-white-50 ms-auto rounded-pill fw-normal">
                        @group.Count() шт.
                    </span>
                </h5>

                <!-- Сетка устройств -->
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
                    @foreach (var item in group)
                    {
                        <div class="col">
                            <div class="card h-100 border-secondary bg-dark bg-opacity-50 hover-shadow transition-all position-relative overflow-hidden group-action">
                                <div class="card-body d-flex align-items-center justify-content-between p-3">
                                    <div class="d-flex align-items-center text-truncate">
                                    
                                        <div class="text-truncate">
                                            <div class="fw-bold text-white text-truncate" title="@item.Name">@item.Name</div>
                                            <div class="small text-muted" style="font-size: 0.75rem;">ID: @item.Id</div>
                                        </div>
                                    </div>

                                    <!-- Кнопки действий (появляются при наведении или всегда видны на моб) -->
                                    <div class="d-flex gap-1">
                                        <button class="btn btn-sm btn-icon btn-outline-light border-0"
                                                onclick='editDevice(@Html.Raw(Json.Serialize(new { id = item.Id, name = item.Name, type = (int)item.DeviceType })))'
                                                title="Редактировать">
                                            <i class="bi bi-pencil"></i>
                                        </button>

                                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id"
                                              onsubmit="return confirm('Удалить модель @item.Name? Это действие необратимо.');" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-icon btn-outline-danger border-0" title="Удалить">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <!-- Декоративная полоска сбоку -->
                                <div class="position-absolute top-0 start-0 bottom-0 bg-success opacity-75" style="width: 3px;"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}

<!-- Модальное окно (Create / Edit) -->
<div class="modal fade" id="deviceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content admin-modal">
            <form method="post" asp-page-handler="Save">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-white" id="modalTitle">Новое устройство</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Input.Id" id="deviceId" />

                    <div class="mb-3">
                        <label asp-for="Input.DeviceType" class="form-label text-white-50">Тип устройства</label>
                        <select asp-for="Input.DeviceType" asp-items="Model.DeviceTypes" class="form-select bg-dark text-white border-secondary" id="deviceType">
                        </select>
                        <div class="form-text text-white-50 small">Выберите категорию, к которой относится модель.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label text-white-50">Название модели</label>
                        <input asp-for="Input.Name" class="form-control bg-dark text-white border-secondary" id="deviceName" placeholder="Например: iPhone 15 Pro Max" />
                        <span asp-validation-for="Input.Name" class="text-danger small"></span>
                    </div>
                </div>
                <div class="modal-footer border-secondary bg-dark">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-success px-4">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

@functions {
    // Хелпер для иконок категорий
    Microsoft.AspNetCore.Html.IHtmlContent GetDeviceIcon(DeviceType type)
    {
        string iconClass = type.ToString().ToLower() switch
        {
            var t when t.Contains("iphone") || t.Contains("phone") || t.Contains("smartphone") => "bi-phone",
            var t when t.Contains("ipad") || t.Contains("tablet") => "bi-tablet",
            var t when t.Contains("mac") || t.Contains("laptop") || t.Contains("book") => "bi-laptop",
            var t when t.Contains("watch") => "bi-smartwatch",
            var t when t.Contains("pod") || t.Contains("audio") => "bi-earbuds",
            var t when t.Contains("console") || t.Contains("xbox") || t.Contains("playstation") => "bi-controller",
            _ => "bi-hdd-network"
        };
        return Html.Raw($"<i class=\"bi {iconClass} text-success fs-5\"></i>");
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var deviceModal;

        document.addEventListener("DOMContentLoaded", function() {
            deviceModal = new bootstrap.Modal(document.getElementById('deviceModal'));
        });

        function openModal() {
            document.getElementById('modalTitle').innerText = 'Новое устройство';
            document.getElementById('deviceId').value = '';
            document.getElementById('deviceName').value = '';
            // Сброс селекта на первый элемент (или дефолтный)
            document.getElementById('deviceType').selectedIndex = 0;

            deviceModal.show();
        }

        function editDevice(data) {
            document.getElementById('modalTitle').innerText = 'Редактировать ' + data.name;
            document.getElementById('deviceId').value = data.id;
            document.getElementById('deviceName').value = data.name;
            document.getElementById('deviceType').value = data.type; // Установка значения селекта по Value (int)

            deviceModal.show();
        }
    </script>
}