@page
@model Propaika_main_app.Pages.Admin.Devices.IndexModel
@{
    ViewData["Title"] = "Модели устройств";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Модели устройств</h2>
    <button type="button" class="btn btn-primary" onclick="openModal()">
        <i class="bi bi-plus-lg"></i> Добавить модель
    </button>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Тип</th>
                    <th>Название модели</th>
                    <th class="text-end" style="width: 150px;">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model.Devices.GroupBy(d => d.DeviceType))
                {
                    // Группировка визуальная для удобства
                    <tr class="table-secondary">
                        <td colspan="3" class="fw-bold ps-3">@group.Key</td>
                    </tr>

                    @foreach (var item in group)
                    {
                        <tr>
                            <td class="ps-4 text-muted"><small>@item.DeviceType</small></td>
                            <td class="fw-bold">@item.Name</td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-primary"
                                            onclick="openModal(@item.Id, '@item.Name', '@item.DeviceType')">
                                        <i class="bi bi-pencil">✏️</i>
                                    </button>

                                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline"
                                          onsubmit="return confirm('Удалить модель @item.Name? Все цены для неё также удалятся.');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash">❌</i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }

                @if (!Model.Devices.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center py-4 text-muted">Нет добавленных устройств</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deviceModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Save">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Новое устройство</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Input.Id" id="inputId" />

                    <div class="mb-3">
                        <label asp-for="Input.DeviceType" class="form-label">Тип устройства</label>
                        <select asp-for="Input.DeviceType" class="form-select" id="inputType" asp-items="Model.DeviceTypes"></select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label">Название модели</label>
                        <input asp-for="Input.Name" class="form-control" id="inputName" placeholder="Например: iPhone 15 Pro" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-success">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openModal(id, name, type) {
            var modal = new bootstrap.Modal(document.getElementById('deviceModal'));

            if (id) {
                document.getElementById('modalTitle').innerText = 'Редактирование модели';
                document.getElementById('inputId').value = id;
                document.getElementById('inputName').value = name;
                document.getElementById('inputType').value = type;
            } else {
                document.getElementById('modalTitle').innerText = 'Новое устройство';
                document.getElementById('inputId').value = '';
                document.getElementById('inputName').value = '';
                // Выбираем первый элемент или сбрасываем
                document.getElementById('inputType').selectedIndex = 0;
            }
            modal.show();
        }
    </script>
}