@page
@model Propaika_main_app.Pages.Admin.Devices.DeleteModel
@{
    ViewData["Title"] = "Удалить модель";
}
<h2 class="text-danger">Удаление модели</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

<dl class="row mt-3">
    <dt class="col-sm-3">Название</dt>
    <dd class="col-sm-9">@Model.Device.Name</dd>

    <dt class="col-sm-3">Тип</dt>
    <dd class="col-sm-9">@Model.Device.DeviceType</dd>

    <dt class="col-sm-3">Позиции в прайсе</dt>
    <dd class="col-sm-9">@Model.Device.ServiceItems.Count</dd>
</dl>

<form method="post" class="mt-3">
    <button type="submit" class="btn btn-danger" @(Model.Device.ServiceItems.Any() ? "disabled" : "")>
        Да, удалить
    </button>
    <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
</form>