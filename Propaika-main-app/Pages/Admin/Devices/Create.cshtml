@page
@model Propaika_main_app.Pages.Admin.Devices.CreateModel
@{
    ViewData["Title"] = "Добавить модель";
}
<h2>Новая модель устройства</h2>

<form method="post" class="mt-4">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Input.Name" class="form-label"></label>
            <input asp-for="Input.Name" class="form-control" placeholder="iPhone 13 Pro Max" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Input.DeviceType" class="form-label"></label>
            <select asp-for="Input.DeviceType" class="form-select">
                <option value="Phone">iPhone</option>
                <option value="Tablet">iPad</option>
                <option value="Laptop">MacBook</option>
                <option value="Watch">Apple Watch</option>
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Добавить</button>
    <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}