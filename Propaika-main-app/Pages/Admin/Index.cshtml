@page
@model Propaika_main_app.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Админка";
}
<div class="row mb-4">
    <div class="col">
        <h1 class="display-5">Панель управления</h1>
        <p class="text-muted">Добро пожаловать, @User.Identity?.Name</p>
    </div>
</div>

<!-- Статистика -->
<div class="row g-4 mb-5">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title">Кейсов</h5>
                <p class="display-4">@Model.TotalCases</p>
                <a asp-page="/Admin/ServiceCases/Index" class="btn btn-light btn-sm">Управление</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Моделей устройств</h5>
                <p class="display-4">@Model.TotalDevices</p>
                <a asp-page="/Admin/Devices/Index" class="btn btn-light btn-sm">Управление</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Позиций в прайсе</h5>
                <p class="display-4">@Model.TotalPriceItems</p>
                <a asp-page="/Admin/Prices/Index" class="btn btn-light btn-sm">Управление</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <h5 class="card-title">Новых заявок</h5>
                <p class="display-4">@Model.PendingRequests</p>
                <a asp-page="/Admin/Requests/Index" class="btn btn-dark btn-sm">Посмотреть</a>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-info">
    <strong>Быстрый старт:</strong> Сначала добавьте модели устройств (iPhone 13, 14 и т.д.), затем заполните прайс для каждой модели, и наконец добавьте кейсы с фото.
</div>