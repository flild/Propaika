@page
@model Propaika_main_app.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Админка";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-white">Панель управления</h1>
        <p class="text-white-50 mb-0 small">Обзор ключевых показателей</p>
    </div>
    <div class="text-white-50 small">
        <i class="bi bi-calendar3 me-2"></i>Сегодня: @DateTime.Now.ToString("d MMMM yyyy")
    </div>
</div>

<!-- Статистика (Карточки) -->
<div class="row g-3 mb-4">
    <!-- Кейсы -->
    <div class="col-md-3">
        <div class="card bg-dark border-secondary h-100 position-relative overflow-hidden group-hover-glow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="bg-success bg-opacity-10 text-success rounded p-2">
                        <i class="bi bi-briefcase fs-4"></i>
                    </div>
                    <span class="badge bg-dark border border-secondary text-white-50">Портфолио</span>
                </div>
                <h2 class="text-white mb-0">@Model.TotalCases</h2>
                <a asp-page="/Admin/ServiceCases/Index" class="stretched-link text-decoration-none text-white-50 small">Перейти к кейсам <i class="bi bi-arrow-right"></i></a>
            </div>
            <!-- Декор -->
            <div class="position-absolute top-0 end-0 p-4 opacity-10">
                <i class="bi bi-briefcase display-1 text-white"></i>
            </div>
        </div>
    </div>

    <!-- Устройства -->
    <div class="col-md-3">
        <div class="card bg-dark border-secondary h-100 position-relative overflow-hidden group-hover-glow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="bg-info bg-opacity-10 text-info rounded p-2">
                        <i class="bi bi-phone fs-4"></i>
                    </div>
                    <span class="badge bg-dark border border-secondary text-white-50">Каталог</span>
                </div>
                <h2 class="text-white mb-0">@Model.TotalDevices</h2>
                <a asp-page="/Admin/Devices/Index" class="stretched-link text-decoration-none text-white-50 small">Модели устройств <i class="bi bi-arrow-right"></i></a>
            </div>
        </div>
    </div>

    <!-- Прайс -->
    <div class="col-md-3">
        <div class="card bg-dark border-secondary h-100 position-relative overflow-hidden group-hover-glow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="bg-warning bg-opacity-10 text-warning rounded p-2">
                        <i class="bi bi-tags fs-4"></i>
                    </div>
                    <span class="badge bg-dark border border-secondary text-white-50">Услуги</span>
                </div>
                <h2 class="text-white mb-0">@Model.TotalPriceItems</h2>
                <a asp-page="/Admin/Prices/Index" class="stretched-link text-decoration-none text-white-50 small">Прайс-лист <i class="bi bi-arrow-right"></i></a>
            </div>
        </div>
    </div>

    <!-- Заявки (Active) -->
    <div class="col-md-3">
        <div class="card bg-danger bg-opacity-10 border-danger h-100 position-relative overflow-hidden group-hover-glow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="bg-danger text-white rounded p-2 shadow-sm">
                        <i class="bi bi-bell fs-4"></i>
                    </div>
                    <span class="badge bg-danger text-white">Требуют внимания</span>
                </div>
                <h2 class="text-white mb-0">@Model.PendingRequests</h2>
                <a asp-page="/Admin/Requests/Index" class="stretched-link text-decoration-none text-danger small fw-bold">Смотреть заявки <i class="bi bi-arrow-right"></i></a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- График -->
    <div class="col-lg-8">
        <div class="card bg-dark border-secondary shadow-sm h-100">
            <div class="card-header border-secondary d-flex justify-content-between align-items-center">
                <h5 class="card-title text-white mb-0">Активность заявок</h5>
                <small class="text-white-50">За 30 дней</small>
            </div>
            <div class="card-body position-relative">
                <canvas id="requestsChart" style="max-height: 350px;"></canvas>
            </div>
        </div>
    </div>

    <!-- Последние заявки -->
    <div class="col-lg-4">
        <div class="card bg-dark border-secondary shadow-sm h-100">
            <div class="card-header border-secondary">
                <h5 class="card-title text-white mb-0">Новые обращения</h5>
            </div>
            <div class="list-group list-group-flush">
                @if (Model.RecentRequests.Any())
                {
                    @foreach (var req in Model.RecentRequests)
                    {
                        <div class="list-group-item bg-dark border-secondary text-white px-3 py-3">
                            <div class="d-flex w-100 justify-content-between mb-1">
                                <h6 class="mb-0 text-truncate" title="@req.ClientName">@req.ClientName</h6>
                                <small class="text-white-50">@req.CreatedAt.ToString("dd.MM HH:mm")</small>
                            </div>
                            <p class="mb-1 small text-info text-truncate">
                                @(string.IsNullOrEmpty(req.DeviceModel) ? "Устройство не указано" : req.DeviceModel)
                            </p>
                            <small class="text-muted d-block text-truncate">@req.PhoneNumber</small>
                        </div>
                    }
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-inbox fs-1 d-block mb-2 opacity-25"></i>
                        Новых заявок пока нет
                    </div>
                }
            </div>
            <div class="card-footer bg-dark border-secondary text-center p-2">
                <a asp-page="/Admin/Requests/Index" class="btn btn-link btn-sm text-decoration-none text-white-50">Все заявки</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('requestsChart').getContext('2d');

            // Градиент заливки
            let gradient = ctx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(46, 204, 113, 0.4)'); // Emerald Start
            gradient.addColorStop(1, 'rgba(46, 204, 113, 0.0)'); // Transparent End

            // Данные с сервера
            const labels = @Html.Raw(Json.Serialize(Model.ChartLabels));
            const data = @Html.Raw(Json.Serialize(Model.ChartData));

            // Плагин для отрисовки выходных (Hack-way без лишних библиотек)
            const weekendPlugin = {
                id: 'weekendHighlight',
                beforeDraw: (chart) => {
                    const { ctx, chartArea: { top, bottom, left, right, width, height }, scales: { x, y } } = chart;

                    ctx.save();

                    // Проходимся по всем меткам и ищем выходные (нужен год для точного определения дня недели)
                    // Но у нас только dd.MM. Упростим: мы знаем что сегодня - это labels[last], а вчера -1.
                    // Лучше передать реальные даты из C#, но для красоты JS сам может посчитать назад

                    // Упрощенный вариант: просто рисуем серые зоны
                    // (Для точной логики лучше передавать массив isWeekend из C#)
                }
            };

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Заявки',
                        data: data,
                        backgroundColor: gradient,
                        borderColor: '#2ecc71', // Emerald Color
                        borderWidth: 2,
                        pointBackgroundColor: '#111418', // Фон точки под цвет фона
                        pointBorderColor: '#2ecc71',
                        pointHoverBackgroundColor: '#2ecc71',
                        pointHoverBorderColor: '#fff',
                        fill: true,
                        tension: 0.4 // Плавные линии
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            backgroundColor: 'rgba(0,0,0,0.8)',
                            titleColor: '#2ecc71',
                            bodyColor: '#fff',
                            borderColor: 'rgba(46, 204, 113, 0.3)',
                            borderWidth: 1
                        }
                    },
                    scales: {
                        x: {
                            grid: { color: 'rgba(255, 255, 255, 0.05)' },
                            ticks: { color: '#888' }
                        },
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(255, 255, 255, 0.05)' },
                            ticks: { color: '#888', stepSize: 1 }
                        }
                    },
                    interaction: {
                        mode: 'nearest',
                        axis: 'x',
                        intersect: false
                    }
                }
            });
        });
    </script>

    <style>
        .group-hover-glow {
            transition: all 0.3s ease;
        }

            .group-hover-glow:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.4);
                border-color: rgba(255,255,255,0.2) !important;
            }
    </style>
}