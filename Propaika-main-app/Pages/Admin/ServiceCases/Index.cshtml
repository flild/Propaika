@page
@model Propaika_main_app.Pages.Admin.ServiceCases.IndexModel
@{
    ViewData["Title"] = "Управление кейсами";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-white">Портфолио работ</h1>
    <button type="button" class="btn btn-primary btn-neon" data-bs-toggle="modal" data-bs-target="#caseModal" onclick="clearForm()">
        <i class="bi bi-plus-lg me-2"></i>Добавить кейс
    </button>
</div>

<!-- Таблица кейсов -->
<div class="card border-0 shadow-sm" style="background: rgba(20,20,30,0.6);">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white-50">
                    <tr>
                        <th style="width: 120px;" class="ps-4">Фото</th>
                        <th>Название / Устройство</th>
                        <th>Услуга / Цена</th>
                        <th class="text-end pe-4">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Cases)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex gap-1">
                                    @if (!string.IsNullOrEmpty(item.BeforeImage))
                                    {
                                        <img src="@item.BeforeImage" class="rounded border border-secondary" style="width: 40px; height: 40px; object-fit: cover;" title="До" />
                                    }
                                    @if (!string.IsNullOrEmpty(item.AfterImage))
                                    {
                                        <img src="@item.AfterImage" class="rounded border border-success" style="width: 40px; height: 40px; object-fit: cover;" title="После" />
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="fw-bold text-white">@item.Title</div>
                                <div class="small text-muted">@item.DeviceModel</div>
                            </td>
                            <td>
                                <div class="text-info">@item.ServiceType</div>
                                <div class="small text-white-50">@item.Cost.ToString("N0") ₽</div>
                            </td>
                            <td class="text-end pe-4">
                                <button class="btn btn-sm btn-outline-light me-2"
                                        onclick='editCase(@Html.Raw(Json.Serialize(item)))'
                                        data-bs-toggle="modal" data-bs-target="#caseModal">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline" onsubmit="return confirm('Удалить этот кейс?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Модальное окно (Scrollable + Centered) -->
<div class="modal fade" id="caseModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content admin-modal">
            <!-- Форма оборачивает весь контент модалки -->
            <form method="post" asp-page-handler="Save" enctype="multipart/form-data" class="d-flex flex-column h-100">

                <div class="modal-header border-secondary">
                    <h5 class="modal-title" id="modalTitle">Новый кейс</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" asp-for="Input.Id" id="caseId" />

                    <div class="row g-3">
                        <!-- Основная инфо -->
                        <div class="col-md-6">
                            <label asp-for="Input.Title" class="form-label text-white-50"></label>
                            <input asp-for="Input.Title" class="form-control bg-dark text-white border-secondary" id="caseTitle" placeholder="Например: Замена дисплея" />
                            <span asp-validation-for="Input.Title" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Input.DeviceModel" class="form-label text-white-50"></label>
                            <input asp-for="Input.DeviceModel" class="form-control bg-dark text-white border-secondary" id="caseDevice" placeholder="Например: iPhone 13 Pro" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Input.ServiceType" class="form-label text-white-50"></label>
                            <input asp-for="Input.ServiceType" class="form-control bg-dark text-white border-secondary" id="caseService" placeholder="Ремонт / Моддинг" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Input.Cost" class="form-label text-white-50"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark border-secondary text-white-50">₽</span>
                                <input asp-for="Input.Cost" class="form-control bg-dark text-white border-secondary" id="caseCost" />
                            </div>
                        </div>

                        <div class="col-12">
                            <label asp-for="Input.Description" class="form-label text-white-50"></label>
                            <textarea asp-for="Input.Description" class="form-control bg-dark text-white border-secondary" id="caseDesc" rows="3"></textarea>
                        </div>

                        <!-- Секция загрузки фото с превью -->
                        <div class="col-12 mt-4">
                            <h6 class="text-white mb-3 border-bottom border-secondary pb-2">Фотоотчет</h6>
                            <div class="row">
                                <!-- Фото ДО -->
                                <div class="col-md-6 text-center">
                                    <div class="p-3 border border-secondary border-dashed rounded bg-black bg-opacity-25">
                                        <div class="mb-2 text-white-50 small">Фото ДО</div>

                                        <!-- Область превью -->
                                        <div class="ratio ratio-4x3 mb-3 bg-dark rounded overflow-hidden position-relative">
                                            <img id="previewBefore" src="https://placehold.co/400x300/1a1d20/FFF?text=No+Image" class="img-fluid object-fit-cover opacity-50" />
                                        </div>

                                        <input asp-for="Input.UploadBefore" type="file" class="form-control form-control-sm bg-dark text-white border-secondary" accept="image/*" onchange="previewImage(this, 'previewBefore')" />
                                    </div>
                                </div>

                                <!-- Фото ПОСЛЕ -->
                                <div class="col-md-6 text-center">
                                    <div class="p-3 border border-secondary border-dashed rounded bg-black bg-opacity-25">
                                        <div class="mb-2 text-white-50 small">Фото ПОСЛЕ</div>

                                        <!-- Область превью -->
                                        <div class="ratio ratio-4x3 mb-3 bg-dark rounded overflow-hidden position-relative">
                                            <img id="previewAfter" src="https://placehold.co/400x300/1a1d20/FFF?text=No+Image" class="img-fluid object-fit-cover opacity-50" />
                                        </div>

                                        <input asp-for="Input.UploadAfter" type="file" class="form-control form-control-sm bg-dark text-white border-secondary" accept="image/*" onchange="previewImage(this, 'previewAfter')" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sticky Footer: Всегда виден внизу -->
                <div class="modal-footer border-secondary bg-dark">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-success px-4">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Функция превью картинок
        function previewImage(input, imgId) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var img = document.getElementById(imgId);
                    img.src = e.target.result;
                    img.classList.remove('opacity-50'); // Делаем ярким
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Заполнение формы данными (Edit)
        function editCase(data) {
            document.getElementById('modalTitle').innerText = 'Редактировать кейс #' + data.id;
            document.getElementById('caseId').value = data.id;
            document.getElementById('caseTitle').value = data.title;
            document.getElementById('caseDevice').value = data.deviceModel;
            document.getElementById('caseService').value = data.serviceType;
            document.getElementById('caseCost').value = data.cost; // Убедись, что формат числа подходит (например 1000.00)
            document.getElementById('caseDesc').value = data.description;

            // Устанавливаем превью существующих картинок
            var imgBefore = document.getElementById('previewBefore');
            if(data.beforeImage) {
                imgBefore.src = data.beforeImage;
                imgBefore.classList.remove('opacity-50');
            } else {
                imgBefore.src = 'https://placehold.co/400x300/1a1d20/FFF?text=No+Image';
                imgBefore.classList.add('opacity-50');
            }

            var imgAfter = document.getElementById('previewAfter');
            if(data.afterImage) {
                imgAfter.src = data.afterImage;
                imgAfter.classList.remove('opacity-50');
            } else {
                imgAfter.src = 'https://placehold.co/400x300/1a1d20/FFF?text=No+Image';
                imgAfter.classList.add('opacity-50');
            }
        }

        // Очистка формы (Create)
        function clearForm() {
            document.getElementById('modalTitle').innerText = 'Новый кейс';
            document.getElementById('caseId').value = '';
            // Сбрасываем текстовые поля
            document.getElementById('caseTitle').value = '';
            document.getElementById('caseDevice').value = '';
            document.getElementById('caseService').value = '';
            document.getElementById('caseCost').value = '0';
            document.getElementById('caseDesc').value = '';

            // Сбрасываем картинки
            document.getElementById('previewBefore').src = 'https://placehold.co/400x300/1a1d20/FFF?text=No+Image';
            document.getElementById('previewBefore').classList.add('opacity-50');
            document.getElementById('previewAfter').src = 'https://placehold.co/400x300/1a1d20/FFF?text=No+Image';
            document.getElementById('previewAfter').classList.add('opacity-50');

            // Сбрасываем input type=file (важно, чтобы можно было выбрать тот же файл снова если передумал)
            document.querySelector('input[name="Input.UploadBefore"]').value = '';
            document.querySelector('input[name="Input.UploadAfter"]').value = '';
        }
    </script>
}