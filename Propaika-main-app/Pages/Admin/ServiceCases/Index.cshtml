@page
@model Propaika_main_app.Pages.Admin.ServiceCases.IndexModel
@{
    ViewData["Title"] = "Управление кейсами";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Кейсы ремонтов</h1>
    @* Кнопка ведет на Edit без ID, что означает создание *@
    <a asp-page="./Edit" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-lg"></i> Добавить новый кейс
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Фото</th>
            <th>Название</th>
            <th>Устройство</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cases)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.AfterImage))
                    {
                        <img src="@item.AfterImage" style="width: 60px; height: 60px; object-fit: cover;" class="rounded" />
                    }
                    else
                    {
                        <span class="text-muted">Нет фото</span>
                    }
                </td>
                <td>
                    <strong>@item.Title</strong>
                    @if (!string.IsNullOrEmpty(item.ServiceType))
                    {
                        <br />
                
                        <small class="text-muted">@item.ServiceType</small>
                    }
                </td>
                <td>@item.DeviceModel</td>
                <td>@item.Cost.ToString("N0") ₽</td>
                <td>
                    <div class="btn-group">
                        @* Кнопка редактирования передает ID *@
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Редактировать">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Удалить этот кейс?');" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
