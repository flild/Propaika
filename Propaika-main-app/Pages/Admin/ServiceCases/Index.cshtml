@page
@model Propaika_main_app.Pages.Admin.ServiceCases.IndexModel
@{
    ViewData["Title"] = "Управление кейсами";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="neon-header">Управление кейсами</h1>
        <a asp-page="./Create" class="btn btn-neon px-4">+ Добавить кейс</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success bg-dark text-success border-success">
            @TempData["Success"]
        </div>
    }

    <div class="neon-card p-3">
        <div class="table-responsive">
            <table class="table table-dark-custom align-middle mb-0">
                <thead>
                    <tr>
                        <th>Фото</th>
                        <th>Устройство / Название</th>
                        <th>Услуга</th>
                        <th>Цена</th>
                        <th>SEO / URL</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Cases)
                    {
                        <tr>
                            <td>
                                <div class="d-flex gap-1">
                                    <img src="@item.BeforeImage" class="thumb-img" alt="До" />
                                    <img src="@item.AfterImage" class="thumb-img" alt="После" />
                                </div>
                            </td>
                            <td>
                                <div class="fw-bold text-white">@item.DeviceModel</div>
                                <div class="small text-muted">@item.Title</div>
                            </td>
                            <td>@item.ServiceType</td>
                            <td class="text-nowrap">@item.Cost.ToString("N0") ₽</td>
                            <td>
                                <div class="small">
                                    <span class="text-muted">Slug:</span>
                                    <a href="/case/@item.Slug" target="_blank" class="text-danger text-decoration-none">
                                        @item.Slug <i class="bi bi-box-arrow-up-right"></i>
                                    </a>
                                </div>
                                @if (string.IsNullOrEmpty(item.MetaTitle))
                                {
                                    <span class="badge bg-warning text-dark">No SEO</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light me-2">
                                    <i class="bi bi-pencil"></i> Ред.
                                </a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id"
                                      class="d-inline" onsubmit="return confirm('Удалить кейс навсегда?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>