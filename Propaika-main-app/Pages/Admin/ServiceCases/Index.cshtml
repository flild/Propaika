@page
@model Propaika_main_app.Pages.Admin.ServiceCases.IndexModel
@{
    ViewData["Title"] = "Управление кейсами";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Кейсы ремонтов</h2>
    <a asp-page="./Create" class="btn btn-primary">+ Добавить кейс</a>
</div>

@if (!Model.Cases.Any())
{
    <div class="alert alert-warning">Кейсов пока нет. Добавьте первый!</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Фото</th>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Цена</th>
                    <th>Дата</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cases)
                {
                    <tr>
                        <td>
                            <img src="@item.AfterImage" alt="После ремонта" style="width: 80px; height: 60px; object-fit: cover; border-radius: 4px;">
                        </td>
                        <td class="fw-bold">@item.Title</td>
                        <td>
                            <small class="text-muted">
                                @(item.Description?.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description)
                            </small>
                        </td>
                        <td class="text-success fw-bold">@item.Cost.ToString("N0") ₽</td>
                        <td>@item.DateCompleted.ToString("dd.MM.yyyy")</td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Изменить</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}