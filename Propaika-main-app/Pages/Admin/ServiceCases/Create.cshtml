@page
@model Propaika_main_app.Pages.Admin.ServiceCases.CreateModel
@{
    ViewData["Title"] = "Добавить кейс";
}
<h2>Новый кейс ремонта</h2>

<form method="post" enctype="multipart/form-data" class="mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-8 mb-3">
            <label asp-for="Input.Title" class="form-label"></label>
            <input asp-for="Input.Title" class="form-control"
                   placeholder="iPhone 13 Pro восстановление после воды" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Input.Cost" class="form-label"></label>
            <input asp-for="Input.Cost" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Input.Cost" class="text-danger"></span>
        </div>
    </div>

    <!-- Device / Service / Slug -->
    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Input.DeviceModel" class="form-label"></label>
            <input asp-for="Input.DeviceModel" class="form-control"
                   placeholder="iPhone 13 Pro" />
            <span asp-validation-for="Input.DeviceModel" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Input.ServiceType" class="form-label"></label>
            <input asp-for="Input.ServiceType" class="form-control"
                   placeholder="Замена дисплея" />
            <span asp-validation-for="Input.ServiceType" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Input.Slug" class="form-label"></label>
            <input asp-for="Input.Slug" class="form-control"
                   placeholder="cases-remont-iphone-13" />
            <span asp-validation-for="Input.Slug" class="text-danger"></span>
            <small class="text-muted">
                Если оставить пустым, URL сгенерируется из названия.
            </small>
        </div>
    </div>

    <!-- SEO -->
    <div class="mb-3">
        <label asp-for="Input.MetaTitle" class="form-label"></label>
        <input asp-for="Input.MetaTitle" class="form-control"
               placeholder="Ремонт iPhone 13 Pro после воды в Санкт‑Петербурге" />
        <span asp-validation-for="Input.MetaTitle" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.MetaDescription" class="form-label"></label>
        <textarea asp-for="Input.MetaDescription" class="form-control" rows="3"
                  placeholder="Краткое SEO‑описание кейса для поисковых систем."></textarea>
        <span asp-validation-for="Input.MetaDescription" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <textarea asp-for="Input.Description" class="form-control" rows="4"
                  placeholder="Описание проблемы и выполненных работ"></textarea>
    </div>

    <!-- Фото + превью -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Input.UploadBefore" class="form-label text-danger">
                Фото ДО ремонта
            </label>
            <input asp-for="Input.UploadBefore" type="file" class="form-control"
                   accept="image/*" id="uploadBefore" />
            <span asp-validation-for="Input.UploadBefore" class="text-danger"></span>

            <div class="mt-2">
                <img id="previewBefore" src="#" alt="Превью ДО"
                     class="img-fluid rounded d-none" />
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Input.UploadAfter" class="form-label text-success">
                Фото ПОСЛЕ ремонта
            </label>
            <input asp-for="Input.UploadAfter" type="file" class="form-control"
                   accept="image/*" id="uploadAfter" />
            <span asp-validation-for="Input.UploadAfter" class="text-danger"></span>

            <div class="mt-2">
                <img id="previewAfter" src="#" alt="Превью ПОСЛЕ"
                     class="img-fluid rounded d-none" />
            </div>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success btn-lg">Сохранить кейс</button>
        <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function bindImagePreview(inputId, imgId) {
            const input = document.getElementById(inputId);
            const img = document.getElementById(imgId);

            if (!input || !img) return;

            input.addEventListener('change', function () {
                const file = this.files && this.files[0];
                if (!file) {
                    img.classList.add('d-none');
                    img.src = '#';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (e) {
                    img.src = e.target.result;
                    img.classList.remove('d-none');
                };
                reader.readAsDataURL(file);
            });
        }

        bindImagePreview('uploadBefore', 'previewBefore');
        bindImagePreview('uploadAfter', 'previewAfter');
    </script>
}