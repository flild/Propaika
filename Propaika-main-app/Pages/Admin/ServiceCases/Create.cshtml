@page
@model Propaika_main_app.Pages.Admin.ServiceCases.CreateModel
@{
    ViewData["Title"] = "Добавить кейс";
}
<h2>Новый кейс ремонта</h2>

<form method="post" enctype="multipart/form-data" class="mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-8 mb-3">
            <label asp-for="Input.Title" class="form-label"></label>
            <input asp-for="Input.Title" class="form-control" placeholder="iPhone 13 Pro восстановление после воды" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Input.Cost" class="form-label"></label>
            <input asp-for="Input.Cost" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Input.Cost" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <textarea asp-for="Input.Description" class="form-control" rows="4" placeholder="Описание проблемы и выполненных работ"></textarea>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Input.UploadBefore" class="form-label text-danger">
                Фото ДО ремонта
            </label>
            <input asp-for="Input.UploadBefore" type="file" class="form-control" accept="image/*" />
            <span asp-validation-for="Input.UploadBefore" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Input.UploadAfter" class="form-label text-success">
                Фото ПОСЛЕ ремонта
            </label>
            <input asp-for="Input.UploadAfter" type="file" class="form-control" accept="image/*" />
            <span asp-validation-for="Input.UploadAfter" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success btn-lg">Сохранить кейс</button>
        <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}