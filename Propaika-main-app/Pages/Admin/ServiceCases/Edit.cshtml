@page
@model Propaika_main_app.Pages.Admin.ServiceCases.EditModel
@{
    ViewData["Title"] = "Редактировать кейс";
}

<h2>Редактирование кейса</h2>

<form method="post" enctype="multipart/form-data" class="mt-4">
    <input type="hidden" asp-for="Input.Id" />
    <input type="hidden" asp-for="Input.ExistingBeforeImage" />
    <input type="hidden" asp-for="Input.ExistingAfterImage" />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-8 mb-3">
            <label asp-for="Input.Title" class="form-label"></label>
            <input asp-for="Input.Title" class="form-control" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Input.Cost" class="form-label"></label>
            <input asp-for="Input.Cost" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Input.Cost" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <textarea asp-for="Input.Description" class="form-control" rows="4"></textarea>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label text-danger">Фото ДО (текущее)</label>
            @if (!string.IsNullOrEmpty(Model.Input.ExistingBeforeImage))
            {
                <div class="mb-2">
                    <img src="@Model.Input.ExistingBeforeImage" class="img-thumbnail" style="max-height: 200px;" />
                </div>
            }
            <label asp-for="Input.UploadBefore" class="form-label small">Загрузить новое (необязательно)</label>
            <input asp-for="Input.UploadBefore" type="file" class="form-control" accept="image/*" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label text-success">Фото ПОСЛЕ (текущее)</label>
            @if (!string.IsNullOrEmpty(Model.Input.ExistingAfterImage))
            {
                <div class="mb-2">
                    <img src="@Model.Input.ExistingAfterImage" class="img-thumbnail" style="max-height: 200px;" />
                </div>
            }
            <label asp-for="Input.UploadAfter" class="form-label small">Загрузить новое (необязательно)</label>
            <input asp-for="Input.UploadAfter" type="file" class="form-control" accept="image/*" />
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary btn-lg">Сохранить изменения</button>
        <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}