@{
    // Хелпер для определения активной страницы
    string? CurrentPage(string pageName) =>
        ViewContext.RouteData.Values["Page"]?.ToString()?.Contains(pageName, StringComparison.OrdinalIgnoreCase) == true ? "active" : null;
}
<!DOCTYPE html>
<html lang="ru" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — Админка PROPAIKA</title>

    <!-- Стили -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="admin-body d-flex flex-column min-vh-100">
    <header class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary sticky-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-success" asp-page="/Admin/Index">
                <i class="bi bi-shield-check me-2"></i>ADMIN ZONE
            </a>

            <!-- Кнопка для мобильных -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Основные разделы -->
                <div class="navbar-nav me-auto">
                    <a class="nav-link @CurrentPage("Index")" asp-page="/Admin/Index"><i class="bi bi-speedometer2 me-1"></i> Дашборд</a>
                    <a class="nav-link @CurrentPage("Requests")" asp-page="/Admin/Requests/Index"><i class="bi bi-bell me-1"></i> Заявки</a>
                    <a class="nav-link @CurrentPage("ServiceCases")" asp-page="/Admin/ServiceCases/Index"><i class="bi bi-images me-1"></i> Кейсы</a>
                    <a class="nav-link @CurrentPage("Prices")" asp-page="/Admin/Prices/Index"><i class="bi bi-tags me-1"></i> Прайс-лист</a>
                    <a class="nav-link @CurrentPage("Devices")" asp-page="/Admin/Devices/Index"><i class="bi bi-phone me-1"></i> Модели</a>
                </div>

                <!-- Правая часть -->
                <div class="navbar-nav align-items-lg-center">
                    <a class="nav-link text-white-50" asp-page="/Index" target="_blank">
                        <i class="bi bi-box-arrow-up-right me-1"></i> Вернуться на сайт
                    </a>

                    <div class="nav-item ms-lg-2">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                            <button type="submit" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-box-arrow-left me-1"></i> Выход (@User.Identity?.Name)
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="container mt-4 flex-grow-1">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-4 mt-5 border-top border-secondary">
        <small>&copy; @DateTime.Now.Year — PROPAIKA Admin Panel</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>