@page
@model Propaika_main_app.Pages.Admin.Prices.EditModel
@{
    ViewData["Title"] = "Редактировать услугу";
}
<h2>Редактирование услуги</h2>

<form method="post" class="mt-4">
    <input type="hidden" asp-for="Input.Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Input.DeviceModelId" class="form-label"></label>
            <select asp-for="Input.DeviceModelId" class="form-select" asp-items="Model.DeviceModels"></select>
            <span asp-validation-for="Input.DeviceModelId" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Input.ServiceName" class="form-label"></label>
            <input asp-for="Input.ServiceName" class="form-control" />
            <span asp-validation-for="Input.ServiceName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Input.Cost" class="form-label"></label>
            <input asp-for="Input.Cost" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Input.Cost" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3 d-flex align-items-center">
            <div class="form-check mt-4">
                <input asp-for="Input.IsPopular" class="form-check-input" />
                <label asp-for="Input.IsPopular" class="form-check-label"></label>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}