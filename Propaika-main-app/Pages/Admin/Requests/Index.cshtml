@page
@using Propaika_main_app.Extra
@model Propaika_main_app.Pages.Admin.Requests.IndexModel
@{
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-white">Входящие заявки</h1>
    <div class="d-flex gap-3">
        <span class="badge border border-success text-success bg-transparent px-3 py-2">
            Новых: @Model.NewCount
        </span>
        <span class="badge border border-warning text-warning bg-transparent px-3 py-2">
            В работе: @Model.InProgressCount
        </span>
    </div>
</div>

<div class="card admin-card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-admin table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Дата</th>
                        <th>Клиент</th>
                        <th>Описание</th>
                        <th>Статус</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Requests)
                    {
                        <tr>
                            <td>#@item.Id</td>
                            <td>@item.CreatedAt.ToString("dd.MM HH:mm")</td>
                            <td>
                                <div class="fw-bold">@item.ClientName</div>
                                <small class="text-muted">@item.PhoneNumber</small>
                            </td>
                            <td>
                                <!-- Обрезаем текст и добавляем кнопку просмотра -->
                                <div class="d-flex align-items-center gap-2">
                                    <span class="text-truncate" style="max-width: 200px;">
                                        @item.ProblemDescription
                                    </span>
                                    @if (!string.IsNullOrEmpty(item.ProblemDescription) && item.ProblemDescription.Length > 20)
                                    {
                                        <button type="button"
                                                class="btn btn-sm btn-icon"
                                                data-bs-toggle="modal"
                                                data-bs-target="#descModal"
                                                data-desc="@item.ProblemDescription"
                                                data-client="@item.ClientName">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                            <td>
                                @if (item.Status == RequestStatus.New)
                                {
                                    <span class="status-badge status-new">Новая</span>
                                }
                                else if (item.Status == RequestStatus.InProgress)
                                {
                                    <span class="status-badge status-work">В работе</span>
                                }
                                else
                                {
                                    <span class="status-badge status-done">Готово</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">

                                    @* --- ДЕЙСТВИЯ ДЛЯ НОВОЙ ЗАЯВКИ --- *@
                                    @if (item.Status == RequestStatus.New)
                                    {
                                        <!-- 1. Взять в работу (Желтая кнопка) -->
                                        <form method="post" asp-page-handler="SetStatus">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="@RequestStatus.InProgress" />
                                            <button class="btn btn-sm btn-outline-warning" title="Взять в работу">
                                                <i class="bi bi-play-fill"></i>
                                            </button>
                                        </form>

                                        <!-- 2. Сразу завершить (Зеленая кнопка с двойной галочкой) -->
                                        <form method="post" asp-page-handler="SetStatus">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="@RequestStatus.Done" />
                                            <button class="btn btn-sm btn-outline-success" title="Сразу завершить">
                                                <i class="bi bi-check-all"></i>
                                            </button>
                                        </form>
                                    }

                                    @* --- ДЕЙСТВИЯ ДЛЯ ЗАЯВКИ В РАБОТЕ --- *@
                                    @if (item.Status == RequestStatus.InProgress)
                                    {
                                        <form method="post" asp-page-handler="SetStatus">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="@RequestStatus.Done" />
                                            <button class="btn btn-sm btn-outline-success" title="Завершить">
                                                <i class="bi bi-check-lg"></i>
                                            </button>
                                        </form>
                                    }

                                    @* --- ДЕЙСТВИЯ ДЛЯ ГОТОВОЙ ЗАЯВКИ --- *@
                                    @if (item.Status == RequestStatus.Done)
                                    {
                                        <form method="post" asp-page-handler="SetStatus">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="@RequestStatus.InProgress" />
                                            <button class="btn btn-sm btn-outline-secondary" title="Вернуть в работу">
                                                <i class="bi bi-arrow-counterclockwise"></i>
                                            </button>
                                        </form>
                                    }

                                    <!-- Кнопка удаления (общая для всех статусов) -->
                                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Удалить заявку?');">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button class="btn btn-sm btn-icon delete" title="Удалить">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Модальное окно для полного описания -->
<div class="modal fade" id="descModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content admin-modal">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title" id="modalClientName">Описание проблемы</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-break pt-0">
                <p id="modalDescText" class="mb-0 fs-6 text-white-70"></p>
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Скрипт для передачи данных в модалку
        const descModal = document.getElementById('descModal')
        descModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget
            const desc = button.getAttribute('data-desc')
            const client = button.getAttribute('data-client')

            descModal.querySelector('#modalDescText').textContent = desc
            descModal.querySelector('#modalClientName').textContent = 'Заявка от ' + client
        })
    </script>
}